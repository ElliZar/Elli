- 
    const sidebarItems = [
        {
            pathToImg: "./img/Callendar.svg",
            notification: true,
            active: false
        },
        {
            pathToImg: "./img/person.svg",
            notification: false,
            active: false
        },
        {
            pathToImg: "./img/Settings.svg",
            notification: false,
            active: false
        },
        {
            pathToImg: "./img/team.svg",
            notification: false,
            active: false
        },
        {
            pathToImg: "./img/letter.svg",
            notification: false,
            active: true
        }
    ];

mixin sidebar(item)
    li.menu__item
        a.menu__link(href= "#")
            img(src= item.pathToImg)
            if (item.notification)
                .ellipse
                    p.ellipse__number 1
            if (item.active)
                img.line(src="./img/line.svg", alt="")

each item in sidebarItems
    +sidebar(item)